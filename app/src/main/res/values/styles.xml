<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="PrimaryText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#BB000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SecondaryText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#8A000000</item>
    </style>


</resources>
